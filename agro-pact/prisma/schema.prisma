generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(cuid())
  name     String?
  email    String?    @unique
  password String
  Contract Contract[]
}

model Contract {
  id            Int      @id @default(autoincrement())
  walletAddress String
  cropType      String
  quantity      Float
  deadline      DateTime
  createdAt     DateTime @default(now())
  phoneNumber   String // Ensure this exists
  pricePerKg    Float // Ensure this exists
  userId        String
  user          User     @relation(fields: [userId], references: [id])
}

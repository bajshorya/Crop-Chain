generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String? @unique
  password String
}

model Contract {
  id            Int      @id @default(autoincrement())
  walletAddress String
  cropType      String
  quantity      Float
  deadline      DateTime
  createdAt     DateTime @default(now())
}
